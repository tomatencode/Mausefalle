        text: "start"
    Button:
        pos_hint: {"x":.2,"y":.85}
        size_hint: (.1,.1)
        on_press: root.restart(self)
        text: "restart"
    BoxLayout:
        pos_hint: {"x":.8,"y":.7}
        size_hint: (.15,.25)
        orientation: 'vertical'
        Label:
            text: root.car_v_label
        Label:
            text: root.car_x_label
        Label:
            text: root.car_t_label
